// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(uuid()) @map("_id") @db.Uuid
  name        String
  description String
  price       Float
  sku         String   @unique
  quantity    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  categoryId  String @db.Uuid
  Category    Category @relation(fields: [categoryId], references: [id])
  inStock     Boolean @default(false)
  invoiceItems InvoiceItem[]
  image       String? @db.Text
  createdBy   String?   
}

model Category {
  id          String       @id @default(uuid()) @map("_id") @db.Uuid
  name        String       
  description String?
  products    Product[]
  createdBy   String?   
  
  @@unique([name, createdBy])  // unique per user
}

model Invoice {
  id          String           @id @default(uuid()) @map("_id") @db.Uuid
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  customerId  String?      @db.Uuid
  Customer    Customer?      @relation(fields: [customerId], references: [id])
  invoiceItems InvoiceItem[]
  totalAmount Float
  paymentType String         @default("CASH")// e.g., "CASH", "MPESA", "CARD"
  status      String         @default("PENDING") // PENDING, PAID, CANCELLED
  createdBy   String?
  invoiceName String            @default("") 
}

model InvoiceItem {
  id         String       @id @default(uuid()) @map("_id") @db.Uuid
  quantity   Int
  price      Float
  productId  String       @db.Uuid
  Product    Product      @relation(fields: [productId], references: [id])
  invoiceId  String?      @db.Uuid
  Invoice    Invoice?    @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  createdBy  String?   
}

model Customer {
  id          String       @id @default(uuid()) @map("_id") @db.Uuid
  firstName   String?      @unique
  lastName    String?      @unique
  email       String?      @unique
  phoneNumber String       @unique
  invoices    Invoice[]
  createdBy   String?
  createdAt   DateTime     @default(now())
}

model FailedCallback {
  id                  Int       @id @default(autoincrement())
  merchantRequestId   String
  checkoutRequestId   String
  resultCode          Int
  resultDesc          String
  createdAt           DateTime  @default(now())
}

model Response {
  id                  Int       @id @default(autoincrement())
  merchantRequestId   String
  checkoutRequestId   String
  responseCode        String
  responseDescription String
  customerMessage     String
  createdAt           DateTime  @default(now())
}

model ResultResponse {
  id                        Int       @id @default(autoincrement())
  resultType                Int
  resultCode                Int
  resultDesc                String
  originatorConversationID  String
  conversationID            String
  transactionID             String
  referenceDataId           Int       
  referenceData             ReferenceData @relation(fields: [referenceDataId], references: [id])
  createdAt           DateTime  @default(now())
}

model ReferenceData {
  id             Int          @id @default(autoincrement())
  referenceItemId Int      
  referenceItem  ReferenceItem @relation(fields: [referenceItemId], references: [id])
  resultResponse ResultResponse[]
  createdAt           DateTime  @default(now())
}

model ReferenceItem {
  id             Int          @id @default(autoincrement())
  key            String
  value          String
  referenceData  ReferenceData[]
  createdAt           DateTime  @default(now())
}

model SuccessfulCallback {
  id                  Int      @id @default(autoincrement())
  merchantRequestId   String
  checkoutRequestId   String
  resultCode          Int
  resultDesc          String
  amount              Float
  mpesaReceiptNumber  String
  transactionDate     BigInt
  phoneNumber         BigInt
  createdAt           DateTime @default(now())
}

model ContactFormMessage {
  id              Int          @id @default(autoincrement())
  name            String
  email           String       
  message         String
}

model User {
  id                String    @id @default(uuid()) @map("_id") @db.Uuid
  clerkId           String    @unique  // All users have Clerk IDs
  email             String    @unique
  firstName         String?
  lastName          String?
  role              String    @default("user") // "admin", "manager", "user"
  status            String    @default("active") // "active", "inactive"
  businessId        String?   @db.Uuid
  Business          Business? @relation(fields: [businessId], references: [id])
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  lastLogin         DateTime?
}

model Business {
  id                    String    @id @default(uuid()) @map("_id") @db.Uuid
  name                  String
  logo                  String? @db.Text
  users                 User[]
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  invitations           UserInvitation[]
  createdBy   String?   @unique 
}


model UserInvitation {
  id            String    @id @default(uuid()) @map("_id") @db.Uuid
  email         String
  role          String    @default("user")
  businessId    String    @db.Uuid
  Business      Business  @relation(fields: [businessId], references: [id])
  invitedBy     String    @db.Uuid
  status        String    @default("pending") // "pending", "accepted", "expired"
  token         String    @unique
  clerkInvitationId String? @unique // Clerk ID for the invitation
  expiresAt     DateTime
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}